<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoOglasi</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <a href="/" class="navbar-logo">CarListings</a>

                <button class="navbar-toggle" id="navbarToggle" aria-label="Toggle menu">
                    ☰
                </button>

                <ul class="navbar-links" id="navbarMenu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/Ad/Index">Browse</a></li>
                    <li><a href="/Account/Login">Login</a></li>
                    <li><a href="/User/Register" class="register-btn">Register</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="footer-container">
            <div class="footer-left">
                <p>&copy; Ognjen Stanojevic, Darko Sel, Uros Popovic. All rights reserved (RAF).</p>
            </div>
            <div class="footer-right">
                <a href="/About">About</a>
                <a href="/Contact">Contact</a>
                <a href="/Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
