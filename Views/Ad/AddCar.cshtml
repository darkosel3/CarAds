@{
    ViewData["Title"] = "Add Car";
}

<div class="content-holder">
        <div class="container">
            <h1>Post a Vehicle for Sale</h1>
            <form asp-action="Create" method="POST" enctype="multipart/form-data">
                <label for="make">Brand:</label>
                <input type="text" id="make" name="make" required>
    
                <label for="model">Model:</label>
                <input type="text" id="model" name="model" required>
    
                <label for="year">Year of Manufacture:</label>
                <input type="number" id="year" name="year" min="1950" max="2025" required>
    
                <label for="mileage">Mileage (km):</label>
                <input type="number" id="mileage" name="mileage" required>
    
                <label for="fuel">Fuel Type:</label>
                <select id="fuel" name="fuel" required>
                    <option value="">-- Select --</option>
                    <option value="petrol">Petrol</option>
                    <option value="diesel">Diesel</option>
                    <option value="hybrid">Hybrid</option>
                    <option value="electric">Electric</option>
                </select>
    
                <label for="price">Price (â‚¬):</label>
                <input type="number" id="price" name="price" required>
    
                <label for="description">Vehicle Description:</label>
                <textarea id="description" name="description" rows="4"></textarea>
    
                <label for="image">Upload Vehicle Image:</label>
                <input type="file" id="image" name="image" accept="image/*">
    
                <button type="submit">Submit Listing</button>
            </form>
        </div>
    </div>

@section Styles {
    <link rel="stylesheet" href="~/css/add.css" />
}